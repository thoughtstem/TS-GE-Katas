#lang racket

(provide image->code-kata)

(require ts-kata-util/katas/main
         2htdp/image)

(define (simple-image-program d)
  (~a "#lang racket\n(require 2htdp/image)\n\n" d))

(define (image->code-kata code)
  (make-kata
   (translate #:in (circle 40 'solid 'red)
              #:out (simple-image-program '(circle 40 'solid 'red)))))


(define-kata-collection image->code-katas
  (image->code-kata '(circle 30 'solid 'red)))